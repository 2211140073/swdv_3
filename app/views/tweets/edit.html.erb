<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
  <% @tweet.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_with model: @tweet do |t| %>
  <%= t.label :message, 'メッセージ' %>
  <%= t.text_field :message %>
  <%= t.label :image,'画像' %>
  <%= t.file_field :image %>
  <%= t.submit '更新' %>
<% end %>